#include <stdio.h>
#include<string.h>
int main()
{
    char x[100],s[100];
    int i,j,k,l,m,n;
    printf("Enter the word");
    fgets(x,100,stdin);
    i=(strlen(x)-1)/2;
    k=i;
    while(x[i+1]!='\0')
    {
        s[j]=x[i];
        j++;
        i++;
    }
    while(l<k)
    {
        s[j]=x[l];
        j++;
        l++;
    }
    for(m=0;m<strlen(x);m++)
    {
       for(n=0;n<m;n++)
       {
           printf("%c",s[n]);
       }
       printf("\n");
    }
}
